header
    .container
        .header
            a.header__menu(href="index.html")
                +icon('menu').icon--menu
            a.header__logo(href="index.html")
                +icon('headerLogo').logo
            .nav
                ul.nav__list
                    li.nav__item
                        a.nav__link(href="about.html",class=(pageBodyClass === "aboutPage" ? "activePage" : undefined) ) О компании
                    li.nav__item
                        a.nav__link(href="catalog.html",class=(pageBodyClass === "catalogPage" ? "activePage" : undefined)) Каталог
                    li.nav__item
                        a.nav__link(href="delivery.html",class=(pageBodyClass === "deliveryPage" ? "activePage" : undefined)) Доставка
                    li.nav__item
                        a.nav__link(href="news.html",class=(pageBodyClass === "newsPage" ? "activePage" : undefined)) Новости
                    li.nav__item
                        a.nav__link(href="contacts.html",class=(pageBodyClass === "contactsPage" ? "activePage" : undefined)) Контакты
            .header__icon
                a.header__heart(href="#")
                    +icon('heart').icon--heart
                a.header__search(href="#")
                    +icon('search').icon--search
                a.header__cart(href="#")
                    +icon('shoppingCart').icon--cart